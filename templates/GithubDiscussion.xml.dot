  <QuestionForm xmlns="http://mechanicalturk.amazonaws.com/AWSMechanicalTurkDataSchemas/2017-11-06/QuestionForm.xsd">
      <Overview>
          <Title>Pull Request Message Classification</Title>
          <Text>
              You are helping to classify messages about a pull request (PR), which programmers use to contribute code to a larger project. The categories along with their respective descriptions and examples are given below.
          </Text>
          <FormattedContent><![CDATA[
                <p><b>Approve condition: Payment depends on correctness (as measured by previously labeled data).</b></p>
                <p><b>If you feel you have labeled the same message(s) before, please skip this assignment.</b></p>
                <hr></hr>
          ]]>
          </FormattedContent>
          {{~it.comments.messageTypes :messageType}}
            <FormattedContent><![CDATA[
                  <p><b>{{=messageType.name}}:</b> {{=messageType.description}}
                  <br />
                  <i>&emsp;Example:</i> {{=messageType.example}}</p>
            ]]>
            </FormattedContent>
          {{~}}
      </Overview>
      {{~it.comments.messages :message}}
        <Question>
            <QuestionIdentifier>{{=message.comment_ID}}</QuestionIdentifier>
            <IsRequired>true</IsRequired>
            <QuestionContent>
            <FormattedContent><![CDATA[
                  <p><b>MESSAGE: </b></p>
            ]]>
            </FormattedContent>
            <Text>
                {{=message.body}}
            </Text>
            <FormattedContent><![CDATA[
                <center><b>--------------------THIS IS THE END OF THE MESSAGE, PLEASE MAKE YOUR SELECTION--------------------</b></center>
            ]]>
            </FormattedContent>
            </QuestionContent>
            <AnswerSpecification>
                <SelectionAnswer>
                    <StyleSuggestion>radiobutton</StyleSuggestion>
                    <Selections>
                        {{~it.comments.messageTypes :messageType}}
                            <Selection>
                                <SelectionIdentifier>{{=messageType.name}}</SelectionIdentifier>
                                <Text>{{=messageType.name}} ({{=messageType.description}})</Text>
                            </Selection>
                        {{~}}
                    </Selections>
                </SelectionAnswer>
            </AnswerSpecification>
        </Question>
      {{~}}
      <Question>
          <QuestionIdentifier>{{=it.issue_id}}</QuestionIdentifier>
          <QuestionContent>
            <Text>
              Please provide your feedback in the following text box
            </Text>
          </QuestionContent>
          <AnswerSpecification>
            <FreeTextAnswer>
            </FreeTextAnswer>
          </AnswerSpecification>
      </Question>
  </QuestionForm>
