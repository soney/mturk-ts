{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "declaration": true,
        "strict": false,
        "noImplicitAny": true,
        "outDir": "built",
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"]
        },
        "lib": [ "es2016" ]
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "built"
    ]
}
